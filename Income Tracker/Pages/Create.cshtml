@page
@model Income_Tracker.Pages.CreateModel
@{
}

<h2>Add a new record</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="IncomeTracker.Date" class=" = control-label"></label>
                <input type="date" asp-for="IncomeTracker.Date" class="form-control" />
                <span asp-validation-for="IncomeTracker.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IncomeTracker.Quantity" class=" = control-label"></label>
                <input type="number" asp-for="IncomeTracker.Quantity" class="form-control" />
                <span asp-validation-for="IncomeTracker.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back To List</a>
</div>

